<?xml version="1.0" encoding="utf-8" ?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
                   http://www.liquibase.org/xml/ns/dbchangelog-ext
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="2026-02-15--0001-author" author="Dracovolodeus">
        <preConditions>
            <not>
                <tableExists tableName="author"/>
            </not>
        </preConditions>
        <createTable tableName = "author">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints
                        primaryKey="true"
                        nullable="false"
                />
            </column>

            <column name="name" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <insert tableName="author">
            <column name="name">FirstAuthorName</column>
        </insert>

        <insert tableName="author">
            <column name="name">SecondAuthorName</column>
        </insert>

        <insert tableName="author">
            <column name="name">ThirdAuthorName</column>
        </insert>

        <insert tableName="author">
            <column name="name">FourthAuthorName</column>
        </insert>

        <insert tableName="author">
            <column name="name">FifthAuthorName</column>
        </insert>

    </changeSet>
</databaseChangeLog>
