<?xml version="1.0" encoding="utf-8" ?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
                   http://www.liquibase.org/xml/ns/dbchangelog-ext
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
    <changeSet id="2026-02-15--0003-user" author="Dracovolodeus">
        <preConditions>
            <not>
                <tableExists tableName="user"/>
            </not>
        </preConditions>

        <createTable tableName="user">
            <column name="id" type="BIGINT" autoIncrement="true"/>

            <column name="name" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>

            <column name="role" type="VARCHAR(8)">
                <constraints nullable="false"/>
            </column>

            <column name="refresh_token" type="VARCHAR(512)">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <insert tableName="user">
            <column name="name">Root</column>
            <column name="role">admin</column>
            <column name="refresh_token"/>
        </insert>

        <insert tableName="user">
            <column name="name">FirstUserName</column>
            <column name="role">user</column>
            <column name="refresh_token"/>
        </insert>

        <insert tableName="user">
            <column name="name">SecondUserName</column>
            <column name="role">user</column>
            <column name="refresh_token"/>
        </insert>

        <insert tableName="user">
            <column name="name">ThirdUserName</column>
            <column name="role">user</column>
            <column name="refresh_token"/>
        </insert>

        <insert tableName="user">
            <column name="name">FourthUserName</column>
            <column name="role">user</column>
            <column name="refresh_token"/>
        </insert>

        <insert tableName="user">
            <column name="name">FifthUserName</column>
            <column name="role">user</column>
            <column name="refresh_token"/>
        </insert>

    </changeSet>
</databaseChangeLog>