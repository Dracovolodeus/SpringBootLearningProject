<?xml version="1.0" encoding="utf-8" ?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
                   http://www.liquibase.org/xml/ns/dbchangelog-ext
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="2026-02-15-0002-book" author="Dracovolodeus">
        <preConditions>
            <not>
                <tableExists tableName="book"/>
            </not>
        </preConditions>
        <createTable tableName = "book">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints
                        primaryKey="true"
                        nullable="false"
                />
            </column>

            <column name="name" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>

            <column name="description" type="VARCHAR(16384)"> </column>

            <column name="publish_year" type="VARCHAR(16)"> </column>

            <column name="author_id" type="BIGINT">
                <constraints
                        foreignKeyName="fk_book_author"
                        referencedTableName="author"
                        referencedColumnNames="id"
                        deleteCascade="true"
                />
            </column>
        </createTable>

        <insert tableName="book">
            <column name="name">FirstBookName</column>
            <column name="description">DescriptionForFirstBook!</column>
            <column name="publish_year">2020</column>
            <column name="author_id">1</column>
        </insert>

        <insert tableName="book">
            <column name="name">SecondBookName</column>
            <column name="description">DescriptionForSecondBook!</column>
            <column name="publish_year">2026</column>
            <column name="author_id">2</column>
        </insert>

        <insert tableName="book">
            <column name="name">ThirdBookName</column>
            <column name="description">DescriptionForThirdBook!</column>
            <column name="publish_year">2021</column>
            <column name="author_id">2</column>
        </insert>

        <insert tableName="book">
            <column name="name">FourthBookName</column>
            <column name="description">DescriptionForFourthBook!</column>
            <column name="publish_year">2000</column>
            <column name="author_id">3</column>
        </insert>

        <insert tableName="book">
            <column name="name">FifthBookName</column>
            <column name="description">DescriptionForFifthBook!</column>
            <column name="publish_year">2010</column>
            <column name="author_id">4</column>
        </insert>

        <insert tableName="book">
            <column name="name">SixthBookName</column>
            <column name="description">DescriptionForSixthBook!</column>
            <column name="publish_year">1983</column>
            <column name="author_id">5</column>
        </insert>

    </changeSet>
</databaseChangeLog>